{
    "presets": [
        [
            "env",
            {
                "targets": {
                    "browsers": ["> 1%", "last 2 versions", "not ie <= 8"]
                }
            }
        ],
        "stage-3",
        "react"
    ],
    "plugins": [
        "react-hot-loader/babel",
        [
            "transform-runtime",
            {
                "polyfill": false,
                "regenerator": true,
                "moduleName": "babel-runtime"
            } 
        ],
        "transform-class-properties",
        "syntax-dynamic-import"
    ]
}