{
  "name": "react-template",
  "version": "1.0.0",
  "description": "A react webpack-config for build SPA",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development webpack-dev-server  --inline --hot --colors --open --config ./webpack.config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --config ./webpack.config/webpack.prod.js"
  },
  "author": "Alan",
  "license": "ISC",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "html-withimg-loader": "^0.1.16",
    "less-loader": "^4.0.5",
    "postcss-loader": "^2.0.8",
    "react-hot-loader": "^3.1.3",
    "style-loader": "^0.19.0",
    "stylus-loader": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "env" 
    ],
    "plugins": ["react-hot-loader/babel"],
    "ignore": [
      "jquery.js",
      "jquery.min.js",
      "bootstrap.js",
      "bootstrap.min.js"
    ]
  }
}
